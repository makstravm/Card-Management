{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "es2017.object", "dom"],
    "baseUrl": "./",
    "paths": {
      "components/*": ["./src/components/*"],
      "api/*": ["./src/api/*"],
      "constants/*": ["./src/constants/*"],
      "helpers/*": ["./src/helpers/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"]
    }
  }
}
