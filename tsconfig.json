{
  "compilerOptions": {
    "outDir": "./dist/",
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "es2017.object", "es2019", "dom"],
    "baseUrl": ".",
    "paths": {
      "components/*": ["./src/components/*"],
      "api/*": ["./src/api/*"],
      "constants/*": ["./src/constants/*"],
      "helpers/*": ["./src/helpers/*"],
      "store/*": ["./src/store/*"],
      "utils/*": ["./src/utils/*"],
      "route/*": ["./src/route/*"]
    }
  },
  "exclude": ["node_modules"]
}
